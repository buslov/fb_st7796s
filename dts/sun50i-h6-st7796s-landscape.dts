/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun50i-h6";

    fragment@0 {
	target-path = "/soc/spi@5011000";
	__overlay__ {
	    num-cs = <2>;
	    
		/* PH3 PL8 */
		cs-gpios = <&pio 7 3 0>,
			<&r_pio 0 8 0>;
	    status = "okay";
	    #address-cells = <1>;
	    #size-cells = <0>;

	    st7796: st7796s@0{
		compatible = "sitronix,st7796s";
		reg = <1>;
		spi-max-frequency = <25000000>;
		fps = <30>;
		buswidth = <8>;
		//reset-gpios = <&pio 3 16 1>;  /* PD16 - unused */
		dc-gpios = <&pio 3 15 0>;     /* PD15 */
		rotate = <0>;
		debug = <1>;
		led-gpios = <&pio 3 18 0>;
	    };
	};
    };

    fragment@1 {
	target-path = "/soc/spi@5011000";
    __overlay__ {
	#address-cells = <1>;
        #size-cells = <0>;
	status = "okay";
	ads7846@0 {
	    compatible = "ti,ads7846";
	    reg = <0>;
	    status = "okay";
	    spi-max-frequency = <1000000>;
	    interrupts = <0 10 2>; /* high-to-low edge triggered */
		interrupt-parent = <&r_pio>;   /* PL10 */
	    pendown-gpio = <&r_pio 0 10 0>;	    

	    /* driver defaults, optional */

           ti,keep-vref-on = <1>;
           ti,x-min = /bits/ 16 <00>;
           ti,x-max = /bits/ 16 <0xFFF>;
           ti,y-min = /bits/ 16 <00>;
           ti,y-max = /bits/ 16 <0xFFF>;
           ti,x-plate-ohms = /bits/ 16 <60>;
           ti,pressure-max = /bits/ 16 <255>;
            ti,swap-xy = <0>;	};
    };
    };


};
